<% title "Register | ImageUploader" %>
<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="description center">
              <h1 class="mg-t-sm">Sign Up</h1>
              <%= render 'shared/error_messages' %>
            </div>
          </div>
          <div class="form-bottom">
            <%=	form_for :user, :html => {:class => 'login-form'}, url: register_path do |f| %>
                <div class="form-group">
                  <%=	f.label 'Username', :class => 'sr-only' %>
                  <%=	f.text_field :username, :class => 'form-username form-control', placeholder: 'Username' %>
                </div>
                <div class="form-group">
                  <%=	f.label 'Password', :class => 'sr-only' %>
                  <%=	f.password_field :password, :class => 'form-username form-control', placeholder: 'Password' %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation, 'Confirmation', :class => 'sr-only' %>
                  <%= f.password_field :password_confirmation, :class => 'form-username form-control', placeholder: 'Confirm password' %>
                </div>
                <div class="center">
                  <%=	f.submit 'Create my account', :class => 'btn btn-lg full-width' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
